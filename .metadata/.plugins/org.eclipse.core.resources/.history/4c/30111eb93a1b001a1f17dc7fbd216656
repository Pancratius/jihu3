package com.hiko.gym.common.repository.database.base;

/**
 * 推送消息修改类
 * 
 * @author cychen
 *
 */
public class DPushMessageModify {

	/** 消息标识 */
	private Long id = null;
	/** 客户标识 */
	private Long customerId = null;
	/** 系统类型(1:IOS;2:安卓) */
	private Short osType = null;
	/** 接收令牌 */
	private String token = null;
	/** 消息状态(1:发送中;2:发送成功;3:发送失败;4:确认收到) */
	private Short status = null;
	/** 消息类型(见推送消息) */
	private Integer type = null;
	/** 消息标题 */
	private String title = null;
	/** 消息内容 */
	private String content = null;
	/** 失败原因 */
	private String cause = null;

	/**
	 * 获取消息标识
	 * 
	 * @return 消息标识
	 */
	public Long getId() {
		return id;
	}

	/**
	 * 设置消息标识
	 * 
	 * @param id 消息标识
	 */
	public void setId(Long id) {
		this.id = id;
	}

	/**
	 * 获取客户标识
	 * 
	 * @return 客户标识
	 */
	public Long getCustomerId() {
		return customerId;
	}

	/**
	 * 设置客户标识
	 * 
	 * @param customerId 客户标识
	 */
	public void setCustomerId(Long customerId) {
		this.customerId = customerId;
	}

	/**
	 * 获取系统类型(1:IOS;2:安卓)
	 * 
	 * @return 系统类型(1:IOS;2:安卓)
	 */
	public Short getOsType() {
		return osType;
	}

	/**
	 * 设置系统类型(1:IOS;2:安卓)
	 * 
	 * @param osType 系统类型(1:IOS;2:安卓)
	 */
	public void setOsType(Short osType) {
		this.osType = osType;
	}

	/**
	 * 获取接收令牌
	 * 
	 * @return 接收令牌
	 */
	public String getToken() {
		return token;
	}

	/**
	 * 设置接收令牌
	 * 
	 * @param token 接收令牌
	 */
	public void setToken(String token) {
		this.token = token;
	}

	/**
	 * 获取消息状态(1:发送中;2:发送成功;3:发送失败;4:确认收到)
	 * 
	 * @return 消息状态(1:发送中;2:发送成功;3:发送失败;4:确认收到)
	 */
	public Short getStatus() {
		return status;
	}

	/**
	 * 设置消息状态(1:发送中;2:发送成功;3:发送失败;4:确认收到)
	 * 
	 * @param status 消息状态(1:发送中;2:发送成功;3:发送失败;4:确认收到)
	 */
	public void setStatus(Short status) {
		this.status = status;
	}

	/**
	 * 获取消息类型(见推送消息)
	 * 
	 * @return 消息类型(见推送消息)
	 */
	public Integer getType() {
		return type;
	}

	/**
	 * 设置消息类型(见推送消息)
	 * 
	 * @param type 消息类型(见推送消息)
	 */
	public void setType(Integer type) {
		this.type = type;
	}

	/**
	 * 获取消息标题
	 * 
	 * @return 消息标题
	 */
	public String getTitle() {
		return title;
	}

	/**
	 * 设置消息标题
	 * 
	 * @param title 消息标题
	 */
	public void setTitle(String title) {
		this.title = title;
	}

	/**
	 * 获取消息内容
	 * 
	 * @return 消息内容
	 */
	public String getContent() {
		return content;
	}

	/**
	 * 设置消息内容
	 * 
	 * @param content 消息内容
	 */
	public void setContent(String content) {
		this.content = content;
	}

	/**
	 * 获取失败原因
	 * 
	 * @return 失败原因
	 */
	public String getCause() {
		return cause;
	}

	/**
	 * 设置失败原因
	 * 
	 * @param cause 失败原因
	 */
	public void setCause(String cause) {
		this.cause = cause;
	}

}
