package com.hiko.gym.common.constant;

/**
 * 客户性别类
 * 
 * @author cychen
 *
 */
public class CustomerGender {

	/** 未知 */
	public static final short UNKNOWN = 0;
	/** 男性 */
	public static final short MALE = 1;
	/** 女性 */
	public static final short FEMALE = 2;

	/**
	 * 获取客户性别描述
	 * 
	 * @param customerGender 客户性别值
	 * @return 客户性别描述
	 */
	public static String getDescription(short customerGender) {
		if (customerGender == UNKNOWN) {
			return "未知";
		}
		if (customerGender == MALE) {
			return "男性";
		}
		if (customerGender == FEMALE) {
			return "女性";
		}
		return "";
	}

}
