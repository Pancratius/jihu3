package com.hiko.gym.common.constant;

/**
 * 身体水分评级类
 * 
 * @author cychen
 *
 */
public class ShuifenGrade {

	/** 偏低 */
	public static final short LOWER = -1;
	/** 正常 */
	public static final short NORMAL = 0;
	/** 偏高 */
	public static final short HIGHER = 1;

	/**
	 * 获取身体水分评级描述
	 * 
	 * @param shuifenGrade 身体水分评级值
	 * @return 身体水分评级描述
	 */
	public static String getDescription(short shuifenGrade) {
		if (shuifenGrade == LOWER) {
			return "偏低";
		}
		if (shuifenGrade == NORMAL) {
			return "正常";
		}
		if (shuifenGrade == HIGHER) {
			return "偏高";
		}
		return "";
	}

}
