package com.hiko.gym.common.constant;

/**
 * 体重评级类
 * 
 * @author cychen
 *
 */
public class TizhongGrade {

	/** 偏低 */
	public static final short LOWER = -1;
	/** 正常 */
	public static final short NORMAL = 0;
	/** 偏高 */
	public static final short HIGHER = 1;

	/**
	 * 获取体重评级描述
	 * 
	 * @param tizhongGrade 体重评级值
	 * @return 体重评级描述
	 */
	public static String getDescription(short tizhongGrade) {
		if (tizhongGrade == LOWER) {
			return "偏低";
		}
		if (tizhongGrade == NORMAL) {
			return "正常";
		}
		if (tizhongGrade == HIGHER) {
			return "偏高";
		}
		return "";
	}

}
