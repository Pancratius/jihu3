package com.hiko.gym.common.constant;

/**
 * 教练性别类
 * 
 * @author cychen
 *
 */
public class CoachGender {

	/** 未知 */
	public static final short UNKNOWN = 0;
	/** 男性 */
	public static final short MALE = 1;
	/** 女性 */
	public static final short FEMALE = 2;

	/**
	 * 获取教练性别描述
	 * 
	 * @param coachGender 教练性别值
	 * @return 教练性别描述
	 */
	public static String getDescription(short coachGender) {
		if (coachGender == UNKNOWN) {
			return "未知";
		}
		if (coachGender == MALE) {
			return "男性";
		}
		if (coachGender == FEMALE) {
			return "女性";
		}
		return "";
	}

}
