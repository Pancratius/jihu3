package com.hiko.gym.common.constant;

/**
 * 骨量评级类
 * 
 * @author cychen
 *
 */
public class GuliangGrade {

	/** 偏低 */
	public static final short LOWER = -1;
	/** 正常 */
	public static final short NORMAL = 0;
	/** 偏高 */
	public static final short HIGHER = 1;

	/**
	 * 获取骨量评级描述
	 * 
	 * @param guliangGrade 骨量评级值
	 * @return 骨量评级描述
	 */
	public static String getDescription(short guliangGrade) {
		if (guliangGrade == LOWER) {
			return "偏低";
		}
		if (guliangGrade == NORMAL) {
			return "正常";
		}
		if (guliangGrade == HIGHER) {
			return "偏高";
		}
		return "";
	}

}
