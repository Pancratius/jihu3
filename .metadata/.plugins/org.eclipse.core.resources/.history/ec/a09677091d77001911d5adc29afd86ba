      select
      
      ar.*
      
     from app_recommend as ar

     LEFT   JOIN user_app_task ua on ar.app_id = ua.app_pack and ua.user_ID= #{userId}

     where tag_id = #{tagId,jdbcType=VARCHAR} order by sort limit 0,6
     
  </select>
  
