package com.hiko.gym.common.constant;

/**
 * 腹部肥胖率评级类
 * 
 * @author cychen
 *
 */
public class FubufeipanglvGrade {

	/** 偏低 */
	public static final short LOWER = -1;
	/** 标准 */
	public static final short STANDARD = 0;
	/** 偏高 */
	public static final short HIGHER = 1;

	/**
	 * 获取腹部肥胖率评级描述
	 * 
	 * @param fubufeipanglvGrade 腹部肥胖率评级值
	 * @return 腹部肥胖率评级描述
	 */
	public static String getDescription(short fubufeipanglvGrade) {
		if (fubufeipanglvGrade == LOWER) {
			return "偏低";
		}
		if (fubufeipanglvGrade == STANDARD) {
			return "标准";
		}
		if (fubufeipanglvGrade == HIGHER) {
			return "偏高";
		}
		return "";
	}

}
